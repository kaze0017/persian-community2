{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended",
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json"],
    "sourceType": "module"
  },
  "ignorePatterns": [
    "/lib/**/*",
    "/generated/**/*",
    "node_modules/**/*"
  ],
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "import/no-unresolved": "off",
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "never"],
    "max-len": ["error", {"code": 100}],
    "require-jsdoc": "off"
  }
}